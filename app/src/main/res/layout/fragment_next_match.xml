<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.home.NextMatchFragment">

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressNextMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <android.support.v7.widget.CardView
        android:id="@+id/layoutNextMatchSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true"
        >
        <Spinner
            android:id="@+id/dropLeagueNextMatch"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:spinnerMode="dropdown"
            android:layout_height="50dp"></Spinner>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/layoutNextMatchSpinner"
        android:id="@+id/recyclerNextMatch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</RelativeLayout>